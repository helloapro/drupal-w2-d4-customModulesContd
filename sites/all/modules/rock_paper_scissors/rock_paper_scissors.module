function display_winner_results() {
    $player1 = $_SESSION['player1'];
    $player2 = $_SESSION['player2'];

    if ($player1 == $player2) {
        return "It's a draw! âœï¸";
    } elseif (
        ($player1 - $player2 === 1) || ($player1 - $player2 === -2)
    ) {
        return "Player One Wins!! ğŸ—¿ ğŸ“œ âœ‚ï¸";
    } else {
        return "Player Two Wins!! ğŸ—¿ ğŸ“œ âœ‚ï¸";
    }
}
